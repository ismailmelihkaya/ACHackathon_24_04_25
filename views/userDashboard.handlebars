<h2>Merhaba {{userName}}. Randevuların aşağıda yer alıyor.</h2>
<div>
  <a href="/auth/user/appointment/create/{{userId}}" class="btn btn-primary"><button>Randevu Oluştur</button></a>
</div>
<br>
<div>
  <a href="/auth/user/old_appointments/{{userId}}" class="btn btn-primary"><button>Geçmiş Randevular</button></a>
</div>
<br>
<input type="text" style="width: 10%" id="filterInput" placeholder="Doktor adı veya tarih girin..." onkeyup="filterAppointments()" />

{{#if appointments.length}}
  <table id="appointmentsTable" border="1">
    <thead>
      <tr>
        <th>Doktor</th>
        <th>Tarih</th>
        <th>Durum</th>
        <th>Not</th>
      </tr>
    </thead>
    <tbody>
      {{#each appointments}}
        <tr>
          <td>{{doctor_name}}</td>
          <td>{{datetime}}</td>
          <td>{{status}}</td>
          <td>{{notes}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>Henüz bir randevunuz bulunmamaktadır.</p>
{{/if}}

<script>
  function filterAppointments() {
    const input = document.getElementById("filterInput").value.toLowerCase();
    const rows = document.querySelectorAll("#appointmentsTable tbody tr");

    rows.forEach(row => {
      const doctor = row.cells[0].textContent.toLowerCase();
      const date = row.cells[1].textContent.toLowerCase();

      if (doctor.includes(input) || date.includes(input)) {
        row.style.display = "";
      } else {
        row.style.display = "none";
      }
    });
  }
</script>

<a href="/auth/logout"><button>Çıkış Yap</button></a>